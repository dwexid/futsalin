<div class="row" >
    <div class="col-md-8 offset-md-2">
        <div class="col-md-12 title">
            <span>Edit tempat futsal</span>
        </div>
        <div class="col-md-12 main-content">
            <%= form_for @tempat do |f| %>
                <div class="form-group row">
                    <%= f.label "Nama tempat", :class => 'col-form-label col-sm-3 offset-sm-1'%>
                    <div class="col-sm-7" >
                        <%= f.text_field :nama_tempat, :class => 'form-control' %>
                    </div>
                </div>
                <div class="form-group row">
                    <div class=" col-sm-3 offset-sm-1">
                        <%= f.label "Alamat", :class => 'col-form-label'%>
                    </div>
                    <div class="col-sm-7" >
                        <%= f.text_field :alamat, :class => 'form-control' %>
                    </div>
                </div>
                <div class="form-group row">
                    <div class=" col-sm-3 offset-sm-1">
                        <%= f.label "Kontak", :class => 'col-form-label'%>
                    </div>
                    <div class="col-sm-7" >
                        <%= f.text_field :kontak, :class => 'form-control' %>
                    </div>
                </div>
                <div class="form-group row">
                    <div class=" col-sm-3 offset-sm-1">
                        <%= f.label "lat", :class => 'col-form-label'%>
                    </div>
                    <div class="col-sm-7" >
                        <%= f.text_field :lat, :class => 'form-control' %>
                    </div>
                </div>
                <div class="form-group row">
                    <div class=" col-sm-3 offset-sm-1">
                        <%= f.label "lang", :class => 'col-form-label'%>
                    </div>
                    <div class="col-sm-7" >
                        <%= f.text_field :lang, :class => 'form-control' %>
                    </div>
                </div>
                <div class="form-group row">
                    <div class=" col-sm-3 offset-sm-1">
                        <%= f.label "Gambar", :class => 'col-form-label'%>
                    </div>
                    <div class="col-sm-7" >
                        <%= f.file_field :image, :class => 'form-control' %>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3 offset-sm-1">
                        <%= f.submit "Simpan", :class => 'btn btn-info full-width' %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>