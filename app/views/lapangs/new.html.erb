<div class="row h-100">
    <div class="col-md-8 offset-md-2">
        <div class="col-md-12 title">
            <span>Tambah lapang futsal</span>
        </div>
        <div class="col-md-12 main-content">
            <%= form_for @lapang do |f| %>
                <div class="form-group row">
                    <%= f.label "Nama lapang", :class => 'col-form-label col-sm-3 offset-sm-1'%>
                    <div class="col-sm-7" >
                        <%= f.text_field :nama_lapang, :class => 'form-control' %>
                    </div>
                </div>
                <div class="form-group row">
                    <div class=" col-sm-3 offset-sm-1">
                        <%= f.label "Harga sewa perjam", :class => 'col-form-label'%>
                    </div>
                    <div class="col-sm-7" >
                        <%= f.text_field :harga_perjam, :class => 'form-control' %>
                    </div>
                </div>
                <div class="form-group row">
                    <div class=" col-sm-3 offset-sm-1">
                        <%= f.label "Jenis", :class => 'col-form-label'%>
                    </div>
                    <div class="col-sm-7" >
                        <%= f.select(:jenis, options_for_select([['Rumput sintetis','Rumput sintetis'],['Vinyl','Vinyl'],['Kayu','Kayu'],['Semen','Semen']]), {},{:class => 'custom-select full-width'}) %>
                    </div>
                </div>
                <div class="form-group row">
                    <div class=" col-sm-3 offset-sm-1">
                        <%= f.label "Gambar", :class => 'col-form-label'%>
                    </div>
                    <div class="col-sm-7" >
                        <%= f.file_field :image, :class => 'form-control' %>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3 offset-sm-1">
                        <%= f.submit "Tambahkan", :class => 'btn btn-info full-width' %>
                    </div>
                </div>
                <%= f.hidden_field(:id_owner, :value => params[:id_owner]) %>
            <% end %>
        </div>
    </div>
</div>