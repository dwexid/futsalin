<div class="row" id="login-form">
    <div class="col-md-8 offset-md-2">
        <% if flash[:notice] %><div class="alert alert-danger"><%=flash[:notice]%></div><%end%>
        <div class="col-md-12 title">
            <span>Silahkan login</span>
        </div>
        <div class="col-md-12 main-content" style="padding-top: 30px">
            <%= form_for(:session, url: validate_path) do |f| %>
                <div class="form-group row">
                    <%= f.label "Username", :class => 'col-form-label col-sm-3 offset-sm-2'%>
                    <div class="col-sm-6" >
                        <%= f.text_field :username, :class => 'form-control' %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= f.label "Password", :class => 'col-form-label col-sm-3 offset-sm-2'%>
                    <div class="col-sm-6" >
                        <%= f.password_field :password, :class => 'form-control' %>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3 offset-sm-2">
                        <button type="submit" class="btn btn-info full-width">Login</button>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>