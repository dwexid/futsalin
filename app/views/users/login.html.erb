<div class="row" id="login-form">
    <div class="col-md-6 offset-md-3">
        <div class="col-md-12 login-title">
            <h5 class="display-5">Silahkan login</h5>
        </div>
        <form class="form-horizontal" method="post" action="users/validate">
            <div class="form-group row">
                <label class="col-form-label col-sm-4">Username</label>
                <div class="col-sm-8" >
                    <input type="text" class="form-control" name="username">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-4">Password</label>
                <div class="col-sm-8" >
                    <input type="password" class="form-control" name="password">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <button type="button" class="btn btn-info full-width">Login</button>
                </div>
            </div>
        </form>
    </div>
</div>