<div class="row" id="login-form">
    <div class="col-md-6 offset-md-3">
        <div class="col-md-12 title">
            <span></span>Edit data user</span>
        </div>

        <%= form_for @user do |f| %>
            <div class="form-group row">
                <%= f.label "Username", :class => 'col-form-label col-sm-4'%>
                <div class="col-sm-8" >
                    <%= f.text_field :username, :class => 'form-control' %>
                </div>
            </div>
            <div class="form-group row">
                <div class=" col-sm-4">
                    <%= f.label "fullname", :class => 'col-form-label'%>
                </div>
                <div class="col-sm-8" >
                    <%= f.text_field :fullname, :class => 'form-control' %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <%= f.submit "Simpan", :class => 'btn btn-info full-width' %>
                </div>
            </div>
        <% end %>
    </div>
</div>