<div class="title">All users</div>
<div class="row">
    <div class="col w-100">
        <table class="table table-hover table-bordered" style="background:#fff;">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Username</th>
                    <th>Fullname</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.username %></td>
                    <td><%= user.fullname %></td>
                    <td><%= user.status %></td>
                    <td>
                        <%= link_to "Edit", edit_user_path(user.id), :class => 'btn btn-sm btn-secondary' %>
                        <%= link_to "Delete", user_path(user.id), :class => 'btn btn-sm btn-danger', method: :delete %>
                    </td>
                </tr>
            <% end %>
            </tbody>    
        </table>
    </div>
</div>
</div>