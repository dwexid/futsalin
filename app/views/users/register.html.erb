<div class="row" id="login-form">
    <div class="col-md-6 offset-md-3">
        <div class="col-md-12 login-title">
            <h5 class="display-5">Silahkan mendaftar</h5>
        </div>
        
        <% if @user.errors.any? %>
            <div class="row">
            <% @user.errors.full_messages.each do |m| %>
                <div class="col-12">
                    <div class="alert alert-danger"><%=m%></div>
                </div>
            <% end %>
            </div>
        <% end %>

        <%= form_for @user do |f| %>
            <div class="form-group row">
                <%= f.label "Username", :class => 'col-form-label col-sm-4'%>
                <div class="col-sm-8" >
                    <%= f.text_field :username, :class => 'form-control' %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label "Password", :class => 'col-form-label col-sm-4'%>
                <div class="col-sm-8" >
                    <%= f.password_field :password, :class => 'form-control' %>
                </div>
            </div>
            <div class="form-group row">
                <div class=" col-sm-4">
                    <%= f.label "fullname", :class => 'col-form-label'%>
                </div>
                <div class="col-sm-8" >
                    <%= f.text_field :fullname, :class => 'form-control' %>
                </div>
            </div>
            <div class="form-group row">
                <div class=" col-sm-4">
                    <%= f.label "Mendaftar sebagai", :class => 'col-form-label'%>
                </div>
                <div class="col-sm-8" >
                    <%= f.select(:status, options_for_select([['Member','member'],['Owner','owner']]), {},{:class => 'custom-select full-width'}) %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <%= f.submit "Mendaftar", :class => 'btn btn-info full-width' %>
                </div>
            </div>
        <% end %>
    </div>
</div>