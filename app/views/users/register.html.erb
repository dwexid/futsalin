<div class="row" id="login-form">
    <div class="col-md-8 offset-md-2">
        
        <div class="col-md-12 title">
            <span>Silahkan mendaftar</span>
        </div>

        <div class="col-md-12 main-content">
        <% if @user.errors.any? %>
            <div class="row">
            <% @user.errors.full_messages.each do |m| %>
                <div class="col-12">
                    <div class="alert alert-danger"><%=m%></div>
                </div>
            <% end %>
            </div>
        <% end %>

        <%= form_for @user do |f| %>
            <div class="form-group row">
                <%= f.label "Username", :class => 'col-form-label col-sm-3 offset-sm-1'%>
                <div class="col-sm-7" >
                    <%= f.text_field :username, :class => 'form-control' %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label "Password", :class => 'col-form-label col-sm-3 offset-sm-1'%>
                <div class="col-sm-7" >
                    <%= f.password_field :password, :class => 'form-control' %>
                </div>
            </div>
            <div class="form-group row">
                <div class=" col-sm-3 offset-sm-1">
                    <%= f.label "fullname", :class => 'col-form-label'%>
                </div>
                <div class="col-sm-7" >
                    <%= f.text_field :fullname, :class => 'form-control' %>
                </div>
            </div>
            <div class="form-group row">
                <div class=" col-sm-3 offset-sm-1">
                    <%= f.label "Mendaftar sebagai", :class => 'col-form-label'%>
                </div>
                <div class="col-sm-7" >
                    <%= f.select(:status, options_for_select([['Member','member'],['Owner','owner']]), {},{:class => 'custom-select full-width'}) %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3 offset-sm-1">
                    <%= f.submit "Mendaftar", :class => 'btn btn-info full-width' %>
                </div>
            </div>
        <% end %>
        </div>
    </div>
</div>